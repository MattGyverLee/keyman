<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adjust_keyboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/adjust_keyboard_height_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/keyman_blue" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Instructions area -->
    <LinearLayout
        android:id="@+id/instructions_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_layout"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FAFAFA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adjust_keyboard_height_instructions"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/height_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reset_to_default"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    </LinearLayout>

    <!-- Preview text area (simulates where text would be) -->
    <View
        android:id="@+id/preview_text_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/instructions_area"
        android:layout_above="@id/resize_bar"
        android:background="#FFFFFFCF" />

    <!-- Draggable resize bar -->
    <View
        android:id="@+id/resize_bar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_above="@id/keyboard_preview"
        android:background="@drawable/resize_handle"
        android:clickable="true"
        android:focusable="true" />

    <!-- Keyboard preview area -->
    <View
        android:id="@+id/keyboard_preview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC" />

</RelativeLayout>